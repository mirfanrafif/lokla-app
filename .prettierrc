{
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "printWidth": 80,
  "importOrder": [
    "^react$",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "^constants/(.*)$",
    "",
    "^@apps/(.*)$",
    "^(?!.*[.]scss$)[./].*$",
    "",
    "^(.*).scss$"
  ],
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@ianvs/prettier-plugin-sort-imports"
  ],
  "importOrderParserPlugins": ["typescript", "decorators-legacy", "jsx"]
}
